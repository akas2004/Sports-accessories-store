<%- include('./partials/header') %>

<div class="w-full h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white rounded-lg shadow-lg p-10 text-center w-full max-w-3xl">
        <h2 class="text-4xl font-semibold text-green-600 mb-6">
            <%= paymentMethod === 'cod' ? 'Order Placed!' : 'Payment Successful!' %>
        </h2>
        <p class="text-lg text-gray-700 mb-6">
            <%= paymentMethod === 'cod' ? 'Your order will be processed, and you can pay on delivery.' : 'Your payment was successful. You will receive an email confirmation shortly.' %>
        </p>
        <a href="/shop" class="mt-8 inline-block bg-blue-600 text-white py-3 px-5 rounded-md font-semibold hover:bg-blue-700 transition">
            Continue Shopping
        </a>
    </div>
</div>

