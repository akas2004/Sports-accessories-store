<%- include('./partials/header') %>
<link rel="stylesheet" href="/css/global.css">



<div class="min-h-screen flex flex-col">
  <div class="container px-10 py-20 flex flex-grow">
    <!-- Sidebar with navigation links -->
    <div class="w-[25%] flex h-screen flex-col items-start">
      <div class="flex flex-col">
        <a class="block w-fit mb-2" href="/owner/dashboard">All Products</a>
        <a class="block w-fit mb-2" href="/product/create">Create new product</a>
      </div>
    </div>

    <!-- Main content section -->
    <main class="w-3/4 bg-white p-8 shadow ml-4 box-effect">
      <h2 class="text-xl font-bold mb-4">Your Dashboard</h2>
      <div class="mb-6">
        <h3 class="text-lg font-semibold mb-4">Total Products Sold</h3>
        <div class="text-3xl font-bold text-blue-500 mb-8">
          5 Products Sold
        </div>

        <h3 class="text-lg font-semibold mb-2">Your Products</h3>
        <table class="w-full border-collapse">
          <thead>
            <tr>
              <th class="border-b-2 p-3 text-left">Product Name</th>
              <th class="border-b-2 p-3 text-left">Price</th>
              <th class="border-b-2 p-3 text-left">Discount</th>
              <th class="border-b-2 p-3 text-left">Sold</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(product => { %>
            <tr>
              <td class="border-b p-3"><%= product.name %></td>
              <td class="border-b p-3">$<%= product.price %></td>
              <td class="border-b p-3"><%= product.discount %>%</td>
              <td class="border-b p-3"><%= product.sold || 0 %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>

        <% if (products.length === 0) { %>
        <div class="mt-4 text-gray-500">
          No products found. <a href="/product/create" class="text-blue-500 underline">Create a new product</a>.
        </div>
        <% } %>
      </div>
    </main>
  </div>
</div>
<%- include('./partials/footer') %>
